# Jeeny Infrastructure - Example Variables
# Copy this file to terraform.tfvars and fill in your values

# Required
project_id = "your-gcp-project-id"

# Optional - defaults shown
region      = "europe-west1"
environment = "dev"
domain      = "jeeny.mr"

# API Configuration
api_min_instances = 0
api_max_instances = 100
api_memory        = "512Mi"
api_cpu           = "1"
api_timeout       = 60
api_concurrency   = 80

# Function Configuration
function_memory        = "512Mi"
function_timeout       = 60
function_max_instances = 100

# Google Maps API Key (required)
google_maps_api_key = "your-google-maps-api-key"

# SMS Provider (Twilio) - optional
twilio_account_sid  = ""
twilio_auth_token   = ""
twilio_phone_number = ""

# Email Provider (SendGrid) - optional
sendgrid_api_key   = ""
email_from_address = "noreply@jeeny.mr"

# Alerting - optional
alert_email         = "alerts@jeeny.mr"
alert_slack_webhook = ""
