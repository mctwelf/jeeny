{
  "expo": {
    "name": "GoCap",
    "slug": "gocap-client",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "gocap",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFD600"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "mr.gocap.client",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "يحتاج تطبيق GoCap إلى موقعك للعثور على السائقين القريبين وعرض موقعك على الخريطة.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "يحتاج تطبيق GoCap إلى موقعك لتتبع رحلتك وتوفير الملاحة الدقيقة.",
        "NSCameraUsageDescription": "يحتاج تطبيق GoCap إلى الوصول إلى الكاميرا لالتقاط صور الملف الشخصي.",
        "NSPhotoLibraryUsageDescription": "يحتاج تطبيق GoCap إلى الوصول إلى مكتبة الصور لتحميل صور الملف الشخصي.",
        "NSMicrophoneUsageDescription": "يحتاج تطبيق GoCap إلى الوصول إلى الميكروفون للمكالمات داخل التطبيق مع السائقين.",
        "CFBundleAllowMixedLocalizations": true,
        "CFBundleDevelopmentRegion": "ar",
        "CFBundleLocalizations": ["ar", "fr", "en"],
        "UIViewControllerBasedStatusBarAppearance": true
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "associatedDomains": [
        "applinks:gocap.mr",
        "applinks:*.gocap.mr"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFD600"
      },
      "package": "mr.gocap.client",
      "versionCode": 1,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "RECORD_AUDIO",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK",
        "POST_NOTIFICATIONS"
      ],
      "blockedPermissions": [],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "gocap.mr",
              "pathPrefix": "/ride"
            },
            {
              "scheme": "https",
              "host": "gocap.mr",
              "pathPrefix": "/promo"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "softwareKeyboardLayoutMode": "pan",
      "allowBackup": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://gocap.mr"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "../../assets/fonts/Gilroy-Thin.ttf",
            "../../assets/fonts/Gilroy-ThinItalic.ttf",
            "../../assets/fonts/Gilroy-UltraLight.ttf",
            "../../assets/fonts/Gilroy-UltraLightItalic.ttf",
            "../../assets/fonts/Gilroy-Light.ttf",
            "../../assets/fonts/Gilroy-LightItalic.ttf",
            "../../assets/fonts/Gilroy-Regular.ttf",
            "../../assets/fonts/Gilroy-RegularItalic.ttf",
            "../../assets/fonts/Gilroy-Medium.ttf",
            "../../assets/fonts/Gilroy-MediumItalic.ttf",
            "../../assets/fonts/Gilroy-SemiBold.ttf",
            "../../assets/fonts/Gilroy-SemiBoldItalic.ttf",
            "../../assets/fonts/Gilroy-Bold.ttf",
            "../../assets/fonts/Gilroy-BoldItalic.ttf",
            "../../assets/fonts/Gilroy-ExtraBold.ttf",
            "../../assets/fonts/Gilroy-ExtraBoldItalic.ttf",
            "../../assets/fonts/Gilroy-Heavy.ttf",
            "../../assets/fonts/Gilroy-HeavyItalic.ttf",
            "../../assets/fonts/Gilroy-Black.ttf",
            "../../assets/fonts/Gilroy-BlackItalic.ttf"
          ]
        }
      ],
      "expo-localization",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "يسمح لـ GoCap باستخدام موقعك لتتبع الرحلات والعثور على السائقين القريبين.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "يسمح لـ GoCap بالوصول إلى الكاميرا لالتقاط صور الملف الشخصي."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "يسمح لـ GoCap بالوصول إلى صورك لتحميل صور الملف الشخصي.",
          "cameraPermission": "يسمح لـ GoCap بالوصول إلى الكاميرا لالتقاط صور الملف الشخصي."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FFD600",
          "defaultChannel": "default",
          "sounds": [
            "./assets/sounds/notification.wav",
            "./assets/sounds/ride_request.wav"
          ]
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "يسمح لـ GoCap بالوصول إلى الميكروفون للمكالمات داخل التطبيق."
        }
      ],
      [
        "expo-secure-store",
        {
          "faceIDPermission": "يسمح لـ GoCap باستخدام Face ID للوصول الآمن إلى حسابك."
        }
      ],
      "expo-local-authentication",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "minSdkVersion": 24,
            "buildToolsVersion": "34.0.0",
            "kotlinVersion": "1.9.0",
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "useLegacyPackaging": false
          },
          "ios": {
            "deploymentTarget": "14.0",
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "owner": "gocap",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-project-id-here",
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 30000
    },
    "locales": {
      "ar": "./src/i18n/locales/ar.json",
      "fr": "./src/i18n/locales/fr.json",
      "en": "./src/i18n/locales/en.json"
    }
  }
}
